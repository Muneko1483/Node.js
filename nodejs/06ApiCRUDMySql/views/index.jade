extends layout.jade

block content
    section.container
        div.item.logo
        div.item
         h1
            a(href="/")= title

    //-
        include header.jade
        article.item 
            -if(data.length)
                table
                    tr
                        th Id
                        th Titulo  
                        th AÃ±o
                        th Puntuacion
                        th Poster
                        th(colspan="2")
                            form(method="get" action="/agregar")
                                input(type="submit", value="Agregar")
                        th
                    -each movie in data
                        tr 
                            td #{movie.movie_id}
                            td #{movie.title}
                            td #{movie.release_year}
                            td #{movie.rating}
                            td
                                img.poster(src="#{movie.image}", alt="#{movie.title}")
                            td editar
                            td eliminar    

            -else
                p.error No existen peliculas en la Base de Datos            
